<Window x:Class="CafePos.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CafePos.Presentation.ViewModels"
        xmlns:views="clr-namespace:CafePos.Presentation.Views"
        Title="CafePOS" Height="900" Width="1400" WindowState="Maximized">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SetupViewModel}">
            <views:SetupView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:OpenShiftViewModel}">
            <views:OpenShiftView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MainPosViewModel}">
            <views:MainPosView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PaymentViewModel}">
            <views:PaymentView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ShiftCloseViewModel}">
            <views:ShiftCloseView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:HoldRecallViewModel}">
            <views:HoldRecallView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MenuSetupViewModel}">
            <views:MenuSetupView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReportsViewModel}">
            <views:ReportsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UsersViewModel}">
            <views:UsersView />
        </DataTemplate>
    </Window.Resources>
    <Grid Background="#FFF5F2ED">
        <ContentControl Content="{Binding Navigation.CurrentViewModel}" />
    </Grid>
</Window>
