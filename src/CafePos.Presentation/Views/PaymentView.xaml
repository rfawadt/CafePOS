<UserControl x:Class="CafePos.Presentation.Views.PaymentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Payment" FontSize="28" FontWeight="Bold" />

        <Border Grid.Row="1" Background="White" Padding="24" CornerRadius="16" Margin="0,16,0,0">
            <StackPanel Width="420">
                <TextBlock Text="Total" />
                <TextBlock Text="{Binding Total, StringFormat=C}" FontSize="26" FontWeight="Bold" Margin="0,0,0,12" />

                <TextBlock Text="Cash Received" />
                <TextBox Text="{Binding CashReceived, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Pay Cash" Command="{Binding PayCashCommand}" />

                <TextBlock Text="Card Amount" Margin="0,10,0,0" />
                <TextBox Text="{Binding CardAmount, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Pay Card" Command="{Binding PayCardCommand}" />

                <Button Content="Split Payment" Command="{Binding PaySplitCommand}" Margin="0,10,0,0" />

                <TextBlock Text="Change Due" Margin="0,10,0,0" />
                <TextBlock Text="{Binding ChangeDue, StringFormat=C}" FontSize="18" FontWeight="Bold" />

                <TextBlock Foreground="Crimson" Text="{Binding ErrorMessage}" Margin="0,6,0,0" />
                <Button Content="Back" Command="{Binding PayBackCommand}" Margin="0,10,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
