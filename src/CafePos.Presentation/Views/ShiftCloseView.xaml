<UserControl x:Class="CafePos.Presentation.Views.ShiftCloseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Close Shift" FontSize="28" FontWeight="Bold" />

        <Border Grid.Row="1" Background="White" Padding="24" CornerRadius="16" Margin="0,16,0,0">
            <StackPanel Width="520">
                <TextBlock Text="Shift Summary" FontWeight="SemiBold" Margin="0,0,0,8" />
                <TextBlock Text="Gross Sales" />
                <TextBlock Text="{Binding Summary.GrossSales, StringFormat=C}" FontWeight="Bold" />
                <TextBlock Text="Net Sales" Margin="0,6,0,0" />
                <TextBlock Text="{Binding Summary.NetSales, StringFormat=C}" FontWeight="Bold" />
                <TextBlock Text="Tax" Margin="0,6,0,0" />
                <TextBlock Text="{Binding Summary.TaxTotal, StringFormat=C}" FontWeight="Bold" />
                <TextBlock Text="Expected Cash" Margin="0,6,0,0" />
                <TextBlock Text="{Binding Summary.ExpectedCash, StringFormat=C}" FontWeight="Bold" />

                <TextBlock Text="Counted Cash" Margin="0,12,0,0" />
                <TextBox Text="{Binding CountedCash, UpdateSourceTrigger=PropertyChanged}" />
                <Button Content="Close Shift" Command="{Binding CloseShiftCommand}" Margin="0,12,0,0" />
                <Button Content="Back" Command="{Binding BackCommand}" />

                <TextBlock Foreground="Crimson" Text="{Binding ErrorMessage}" Margin="0,6,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
